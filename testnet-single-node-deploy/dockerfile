FROM rust:1.81.0

# Set up Rust and cargo
RUN apt-get update && apt-get install git build-essential clang -y

# Set the working directory to the repo root
WORKDIR /app

# Copy the entire repository content (from the parent zebra directory)
COPY . .

# Copy config file to working directory for easy access
COPY testnet-single-node-deploy/regtest-config.toml regtest-config.toml

RUN ls -la /app/testnet-single-node-deploy/
RUN cat /app/testnet-single-node-deploy/regtest-config.toml

# Build zebrad with the required features
RUN cargo build --release --package zebrad --bin zebrad --features="getblocktemplate-rpcs"

EXPOSE 18232

# Run the zebra node
ENTRYPOINT ["target/release/zebrd", "-c", "regtest-config.toml"]
